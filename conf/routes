# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.MainController.index()
GET     /name                       controllers.MainController.getName(name: String)
GET     /owner                      controllers.MainController.getOwner(owner: String)
GET     /atc                        controllers.MainController.getATC(atc: String)
GET     /regnr                      controllers.MainController.getRegnr(regnr: String)
GET     /therapy                    controllers.MainController.getTherapy(therapy: String)

# 2. parameter will appear in URI
GET     /fi/id/:id                  controllers.MainController.fachinfoId(id: Long)
GET     /fi/gtin/:gtin              controllers.MainController.fachinfoEan(gtin: String)
GET     /fii                        controllers.MainController.getFachinfo(id: Long)

GET     /javascriptRoutes           controllers.MainController.javascriptRoutes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
